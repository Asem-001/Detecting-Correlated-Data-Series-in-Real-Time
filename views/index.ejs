  </head>
  <body>

    <%- include('./partials/header.ejs') %>

    <%- include('./partials/adminsidebar.ejs') %>

    <main id="main" class="main">

        <section class="section dashboard">
            <div class="row">
              <div class="col-md-9 mt-5">
                <div class="card" style="height: 515px; ">
                  <div class="card-body" style="max-height: 700px;">
                    <h5 class="card-title">Chart </h5>
                    <canvas style="max-width: 2200px; max-height: 400px; margin-bottom: 30px; " id="chart" width="668" height="334" ></canvas>
                  </div>
                </div>
              </div>
    
              <div class="col-md-3 mt-5">
                <div class="card" style="height: 515px;">
                  <div class="card-body mt-3">
                      <div class="d-flex justify-content-center py-4">
                        
                        <button type="button" id="startButton" class="btn btn-outline-success me-2">Start</button>
                        <button type="submit" id="stopButton" class="btn btn-outline-danger" >Stop</button>
                      </div>                    
                      

                      <div class="d-flex justify-content-center py-1 mb-2">
                        <select class="form-select me-2" id="timeSeriesSelect">
                          <!-- Options will be added dynamically -->
                        </select>
                        <button type="button" class="btn btn-outline-primary" id="addSeriesButton">Add</button>
                      </div>


                      <div class="d-flex justify-content-center py-1 mb-4">
                        <label for="seriesNumber" class="card-title">Total series: <span id="seriesCount" style="border:0; color:#012970; ">0</span></label>
                      </div>
              
                      <div class="d-flex justify-content-center py-1 mb-2" >
                        <select class="form-select me-2" id="datasetSelect">
                          <option selected>Select Series</option>
                          <!-- Options will be added dynamically -->
                        </select>
                        <button type="button" class="btn btn-outline-danger me-2" id="deleteSeriesButton">Delete</button>
                      </div>
                      
                      <!-- Threshold slider -->
                      <div class="py-2 mb-3">
                        <p>
                          <label for="range" class="card-title">Threshold:</label>
                          <input type="text" id="range" readonly style="border:0; color:#012970;">
                        </p>
                         
                        <div id="slider-range"></div>
                      </div>

                      <!-- Slice Size Selection -->
                      <div class="d-flex justify-content-center py-1 mb-2">
                        <select class="form-select" id="sliceSizeSelect">
                          <option selected >Window Size</option>
                          <option value="5">5</option>
                          <option value="10">10</option>
                          <option value="15">15</option>
                          <option value="20">20</option>
                          <option value="25">25</option>
                          <option value="30">30</option>
                          <option value="35">35</option>
                          <option value="40">40</option>
                          <option value="45">45</option>
                          <option value="50">50</option>
                          <option value="55">55</option>
                          <option value="60">60</option>
                          <option value="65">65</option>
                          <option value="70">70</option>
                          <option value="75">75</option>
                          <option value="80">80</option>
                          <option value="85">85</option>
                          <option value="90">90</option>
                          <option value="95">95</option>
                          <option value="100">100</option>
                        </select>
                      </div>

              
                  </div>
                </div>
              </div>
              
            </div>
    
          <div class="row">          

            <div class="col-lg-6">
              <div class="card" id="correlationMatrixModal" style="height: 515px;">
                  <div class="card-body">
                    
                      <h5 class="card-title">Correlation Matrix</h5>
                      <p class="info-title">number of computations: <span id="computation"> NA</span></p>
                      <div id="colorBar" class="color-bar mb-2">
                        <span class="label-neg">-1</span>
                        <span class="label-pos">1</span>
                      </div>                    
                      <div id="correlationDisplay"><!-- Correlation matrix will be displayed here --></div>
                  </div>
              </div>
            </div>


            <div class="col-lg-6">
              <div class="card" style="height: 515px;">
                <div class="card-body">
                  <h5 class="card-title">Notification</h5>
                  <div class="scrollable-content" id="notificationContent">
                    
                    <!-- Will be filled in the javascript -->
                  </div>
                </div>
              </div>
            </div>
            
            


          </div>
        </section>

      </main>
    
      <footer id="footer" class="footer">
        <div class="copyright">
          &copy; Copyright <strong><span>Corell8</span></strong>. All Rights Reserved
        </div>
      </footer>
    
