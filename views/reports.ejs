<body>

  <%- include('./partials/header.ejs') %>

  <%- include('./partials/adminsidebar.ejs') %>


  <main id="main" class="main">

    <section class="section dashboard">

      <div class="pagetitle mb-4">
        <h1>Reports</h1>
        <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item active">Reports</li>
            </ol>
          </nav>
      </div>


      <div class="row" >
        <div class="col-lg-12">
    
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <!-- Start Date Section -->
                        <div class="col-md-4">
                            <h6 class="card-title-small" style="padding-top: 10px;">Choose start date</h6>
                            <div class="card-body">
                                <div class="row mb-1">
                                    <div class="col-sm-10">
                                        <input type="date" class="form-control" id="startDate" style="height: 40px;">
                                    </div>
                                </div>
                            </div>
                        </div>
    
                        <!-- End Date Section -->
                        <div class="col-md-4">
                            <h6 class="card-title-small" style="padding-top: 10px;">Choose end date</h6>
                            <div class="card-body">
                                <div class="row mb-1">
                                    <div class="col-sm-10">
                                        <input type="date" class="form-control" id="endDate" style="height: 40px;">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <h6 class="card-title-small" style="padding-top: 10px;">Choose a series</h6>
                                <select class="col-sm-10" id="timeSeriesSelect" style="max-height: 40px;" multiple>
                                  <!-- Options will be added dynamically -->
                                </select>
                        </div>
    
                        <a href="#">
                            <div class="d-grid gap-2">
                              <button class="btn btn-primary" id="searchButton" type="button">Search</button>
                            </div>
                        </a>

                    </div>
                </div>
            </div>
    
            <!-- Scrollable Data Display Card -->
    
        </div>
      </div>

      <div class="row" id="dataDisplaySection" style="display: none;">
        <div class="col-lg-12">
          <div class="card mt-3">
            <div class="card-body">
                <h6 class="card-title">Data Display</h6>
                              <!-- Accordion without outline borders -->
                              <div class="accordion accordion-flush" id="accordionFlushExample" style="height: 42vh; overflow-y: auto; overflow-x: hidden;">
                                <div class="accordion-item">
                                  <h2 class="accordion-header" id="flush-headingOne">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                                      Example #1
                                    </button>
                                  </h2>
                                  <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                      <p><strong>First Correlation Name:</strong> Example Name 1</p>
                                      <p><strong>Second Correlation Name:</strong> Example Name 2</p>
                                      <a href="/detailedreport" class="card-link">Show more</a>
                                    </div>
                                  </div>
                                </div>
                                <div class="accordion-item">
                                  <h2 class="accordion-header" id="flush-headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                                      Example #2
                                    </button>
                                  </h2>
                                  <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                      <p><strong>First Correlation Name:</strong> Example Name 1</p>
                                      <p><strong>Second Correlation Name:</strong> Example Name 2</p>
                                      <a href="/detailedreport" class="card-link">Show more</a>
                                  </div>
                                  </div>
                                </div>
                                <div class="accordion-item">
                                  <h2 class="accordion-header" id="flush-headingThree">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                                      Example #3
                                    </button>
                                  </h2>
                                  <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                      <p><strong>First Correlation Name:</strong> Example Name 1</p>
                                      <p><strong>Second Correlation Name:</strong> Example Name 2</p>
                                      <a href="/detailedreport" class="card-link">Show more</a>
                                  </div>
                                  </div>
                                </div>
                                <div class="accordion-item">
                                  <h2 class="accordion-header" id="flush-headingThree">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFour" aria-expanded="false" aria-controls="flush-collapseThree">
                                      Example #4
                                    </button>
                                  </h2>
                                  <div id="flush-collapseFour" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                      <p><strong>First Correlation Name:</strong> Example Name 1</p>
                                      <p><strong>Second Correlation Name:</strong> Example Name 2</p>
                                      <a href="/detailedreport" class="card-link">Show more</a>
                                  </div>
                                  </div>
                                </div>
                              </div><!-- End Accordion without outline borders -->

            </div>
          </div>

          
        </div>
      </div>

    
      
    </section>
  </main>

