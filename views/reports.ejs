  <link href="../public/css/reports.css" rel="stylesheet">

</head>

<body>

  <%- include('./partials/header.ejs') %>

    <%- include('./partials/adminsidebar.ejs') %>


      <main id="main" class="main">

        <section class="section dashboard">

          <div class="pagetitle mb-4">
            <h1>Reports</h1>
            <nav>
              <ol class="breadcrumb">
                <li class="breadcrumb-item active">Reports</li>
              </ol>
            </nav>
          </div>


          <div class="row">
            <div class="col-lg-12">

              <form>
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <!-- Start Date Section -->
                      <div class="col-md-4">
                        <h6 class="card-title-small" style="padding-top: 10px;">Choose start date</h6>
                        <div class="card-body">
                          <div class="row mb-1">

                            <div class="col-sm-10">
                              <input type="date" class="form-control" id="startDate" name="startDate"
                                style="height: 40px;">
                            </div>
                          </div>
                        </div>
                      </div>

                      <!-- End Date Section -->
                      <div class="col-md-4">
                        <h6 class="card-title-small" style="padding-top: 10px;">Choose end date</h6>
                        <div class="card-body">
                          <div class="row mb-1">
                            <div class="col-sm-10">
                              <input type="date" class="form-control" id="endDate" name="endDate" style="height: 40px;">
                            </div>
                          </div>
                        </div>
                      </div>

                      <div class="col-md-4">
                        <h6 class="card-title-small" style="padding-top: 10px;">Choose a series</h6>
                        <select class="col-sm-10" id="timeSeriesSelect" style="max-height: 40px;" multiple>
                          <!-- Options will be added dynamically -->
                        </select>
                      </div>


                      <div class="d-grid gap-2">
                        <button class="btn btn-primary" id="searchButton" type="submit">Search</button>
                      </div>


                    </div>
                  </div>
                </div>


                <!-- Scrollable Data Display Card -->
              </form>
            </div>
          </div>

          <div class="row" id="dataDisplaySection" style="display: none;">
            <div class="col-lg-12">
              <div class="card mt-3">
                <div class="card-body">
                  <h6 class="card-title">Data Display</h6>
                  <!-- Accordion without outline borders -->
                  <div class="accordion accordion-flush" id="accordionFlushExample"
                    style="height: 42vh; overflow-y: auto; overflow-x: hidden;">



                  </div>


                </div><!-- End Accordion without outline borders -->

              </div>
            </div>


          </div>
          </div>



        </section>
      </main>

      <footer id="footer" class="footer">
        <div class="copyright">
          &copy; Copyright <strong><span>Corell8</span></strong>. All Rights Reserved
        </div>
      </footer>

      <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
          class="bi bi-arrow-up-short"></i></a>

